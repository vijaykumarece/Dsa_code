


import java.util.Scanner;

public class sum_N_recursion {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        int n = s.nextInt();
        sum(n,0);
    }
    public static void sum(int n, int sum){
        if(n<1){
            System.out.print(sum);
            return ;
        }
        sum(n-1, sum+n);
    }
    
}
